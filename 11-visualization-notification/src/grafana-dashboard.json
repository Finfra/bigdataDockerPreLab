{
  "dashboard": {
    "id": null,
    "title": "FMS Device Monitoring Dashboard",
    "tags": ["fms", "iot", "monitoring"],
    "timezone": "Asia/Seoul",
    "panels": [
      {
        "id": 1,
        "title": "Device Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "count by (DeviceId) (fms_device_last_seen)",
            "legendFormat": "Device {{DeviceId}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Sensor Readings (Real-time)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "fms_sensor1_value",
            "legendFormat": "Temperature (Â°C)"
          },
          {
            "expr": "fms_sensor2_value", 
            "legendFormat": "Humidity (%)"
          },
          {
            "expr": "fms_sensor3_value",
            "legendFormat": "Pressure (PSI)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"drawStyle": "line"},
            "min": 0,
            "max": 150
          }
        }
      },
      {
        "id": 3,
        "title": "Motor Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "fms_motor1_rpm",
            "legendFormat": "Main Motor RPM"
          },
          {
            "expr": "fms_motor2_rpm",
            "legendFormat": "Aux Motor RPM"
          },
          {
            "expr": "fms_motor3_rpm",
            "legendFormat": "Cooling Motor RPM"
          }
        ]
      },
      {
        "id": 4,
        "title": "Failure Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(fms_failure_count[5m]) * 100",
            "legendFormat": "Failure Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Data Quality Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "avg(fms_data_quality_score) * 100",
            "legendFormat": "Quality Score"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}